syntax enable

set number
set spell
set cursorline
set mouse=a

set encoding=utf8

set path+=**
set splitright
set splitbelow

set ignorecase
set smartcase

set errorbells
set report=0

set smartindent
set tabstop=4
set shiftwidth=4
set expandtab
set wildmode=list:longest,full
set wildmenu

set incsearch
set hlsearch

set background=dark
colorscheme quiet
